{% extends "base.jinja2" %}
{% block content %}
    {% if poem %}
        <div class="ui externally celled grid">
	    <div class="two column row">
		<div class="left floated column">
		    <h1 class="header">Random Poem</h1>
		</div>
	    </div>
	    <div class="row">
		<div class="four wide column"></div>
		<div class="eight wide column">
		    <div class="ui item">
			<div class="content">
			    <h2 class="header">{{ poem.title }}</h2>
			    <div class="meta" style="color: #5D5D5D">by {{ poem.author }}</div>
			    <div class="description">
				{{ poem.html|safe }}
			    </div>
			    <div class="extra" style="color: #5D5D5D">Categories</div>
			</div>
		    </div>
		</div>
		<div class="four wide column"></div>
	    </div>
	</div>
    {% endif %}
{% endblock %}