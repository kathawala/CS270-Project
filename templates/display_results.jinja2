{% extends "base.jinja2" %}
{% block content %}
{% if results %}
<div class="ui grid">
    <div class="one column row">
	<div class="left floated column">
	    <h1 class="header">Results</h1>
	    {% if categories %}
	    <h4> {{ categories }}</h4>
	    {% endif %}
	</div>
    </div>
</div>
<div class="ui divider"></div>
<div class="ui relaxed divided list">
    {% for result in results %}
    <div class="item">
	<div class="content">
	    <h2 class="ui header">
		<a href="/poem/{{ result.pfid }}">{{ result.title }}</a>
	    </h2>
	</div>
	<div class="description">by {{ result.author }}</div>
    </div>
    {% endfor %}
</div>
<div class="ui divider"></div>
<form action="/"
<div class="ui pagination menu">
    {% for i in range(1, pages+1) %}
        {% if i == pg %}
           <a class="active item">{{i}}</a>
	{% else %}
	   <a href="{{url_for('paginatePoemsByCategories', category=categories, page=i)}}" class="item">{{i}}</a>    
	{% endif %}
	    
    {% endfor %}
</div>
{% endif %}
{% endblock %}